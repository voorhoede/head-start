---
const { locale } = Astro.params;

const script = `
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Head Start",
      "url": "${Astro.site}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "${Astro.site}api/search?locale=${locale}query={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    }
  </script>
`;
---

<Fragment set:html={script} />
