---
import type { Heading } from 'datocms-structured-text-utils';

interface Props {
  node: Heading;
}

const { node } = Astro.props;
const { style, level = 2 } = node;
const Tag = `h${level}` as 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
---
<Tag class={style}><slot /></Tag>

<style>
  .centered {
    text-align: center;
  }
</style>
