---
import siteDataUntyped from '@lib/site.json';

type SiteData = {
  internalDomain?: string;
};

const siteData = siteDataUntyped as SiteData;
const { datocmsEnvironment, datocmsToken, isPreview } = Astro.locals;
const projectName = siteData.internalDomain?.split('.')[0] || null;
---
<preview-mode
  data-datocms-environment={ datocmsEnvironment }
  data-datocms-token={ isPreview && datocmsToken }
  data-datocms-project={ projectName }
>
  <preview-mode-bar>  
    Preview mode
    <span role="presentation" data-status="closed" />
    <div class="preview-mode-actions">
      {/* eslint-disable-next-line astro/jsx-a11y/anchor-is-valid */}
      <a data-debug-edit-record target="_blank" rel="noreferrer noopener">edit in CMS</a>
      <button data-debug-toggle-blocks type="button">show blocks</button>
      <a href={ `/api/preview/exit/?location=${Astro.url}` }>exit preview</a>
    </div>
  </preview-mode-bar>
  <slot />
</preview-mode>

<script src="./PreviewMode.client.ts"></script>

<style>
preview-mode-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1em;
  background: black;
  color: white;
}

a {
  color: white;
}

a[data-debug-edit-record]:not([href]) {
  display: none;
}

.preview-mode-actions {
  display: flex;
  gap: 1em;
  align-items: center;
}

[data-status]:before {
  display: inline-block;
  margin-left: .5em;
  margin-right: .5em;
}
[data-status="closed"]:before {
  content: "âšª";
}
[data-status="connecting"]:before {
  content: "ðŸŸ ";
  animation: pulseAnimation 1s infinite;
}
[data-status="connected"]:before {
  content: "ðŸŸ¢";
  animation: pulseAnimation 2s infinite;
}
[data-status="error"]:before {
  content: "ðŸ”´";
}

@keyframes pulseAnimation {
  0%   { opacity: 1; }
  50%  { opacity: 0.2; }
  100% { opacity: 1; }
}

[data-debug-toggle-blocks] {
  all: unset;
  text-decoration: underline;
  cursor: pointer;
}
:global(.block-name-label) {
  display: none;
}
:global([data-debug-blocks-visible="true"]) {
  --block-label-z-index: 9999;
  --block-label-color: #ff593d;

  .block-name-label {
    display: block;
    position: absolute;
    background: var(--block-label-color);
    color: white;
    font-size: .75rem;
    font-weight: bold;
    letter-spacing: 1px;
    border-radius: .25rem;
    padding: .25rem .5rem;
    z-index: var(--block-label-z-index);
    pointer-events: auto;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid white;
    white-space: nowrap;
    transform: translateY(-90%);
    width: fit-content !important;
  }

  .block-name-label[href]:hover,
  .block-name-label.hover[href] {
    background: color-mix(in srgb, var(--block-label-color) 70%, black);
    z-index: calc(var(--block-label-z-index) + 1);
  }

  .block-name-label:not([href]) {
    background: var(--block-label-color);
    opacity: 0.6;
    cursor: default;
    border-style: dashed;
  }

  [data-debug-block-container].hover {
    outline: 2px solid color-mix(in srgb, var(--block-label-color) 30%, white);
    outline-offset: -2px;
  }
}
</style>
