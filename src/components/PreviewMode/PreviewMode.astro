  content: "ðŸŸ¢";
  animation: pulseAnimation 2s infinite;
}
[data-status="error"]:before {
  content: "ðŸ”´";
}

@keyframes pulseAnimation {
  0%   { opacity: 1; }
  50%  { opacity: 0.2; }
  100% { opacity: 1; }
}

:global(.block-name-label) {
  display: none;
  position: absolute;
  background: rgb(245, 88, 62);
  color: white;
  font-size: .75rem;
  font-weight: bold;
  letter-spacing: 1px;
  border-radius: .25rem;
  padding: .25rem .5rem;
  z-index: 9999;
  pointer-events: auto;
  text-decoration: none;
  transition: all 0.2s ease;
  border: 1px solid white;
  white-space: nowrap;
  transform: translateY(-90%);
}

:global([data-show-block-names="true"] .block-name-label) {
  display: block;
}

:global([data-show-block-names="true"] .block-name-label[href]:hover),
:global([data-show-block-names="true"] .block-name-label.hover[href]) {
  background: rgb(203, 74, 51);
}

:global([data-show-block-names="true"] .block-name-label:not([href])) {
  opacity: 0.6;
  cursor: default;
  border-style: dashed;
}

:global([data-show-block-names="true"] [data-block-container].hover) {
  outline: 2px solid rgb(255, 206, 197);
  outline-offset: 2px;
}

</style>
