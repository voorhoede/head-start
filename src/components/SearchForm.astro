---
import { t } from '@lib/i18n';
import { minQueryLength, getSearchPathname, queryParamName } from '@lib/search';

interface Props {
  query: string;
}
const { query } = Astro.props;
---

<form method="GET" action={ getSearchPathname() } role="search">
  <label for="query">{ t('search_label') }</label>
  <input 
    type="search" 
    id="query" 
    name={ queryParamName } 
    value={ query }
    placeholder={ t('search_label') }
    minlength={ minQueryLength }
    required
  />
  <button type="submit">{ t('search') }</button>
</form>
