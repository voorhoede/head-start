---
import type { IconName } from '@assets/icon-sprite';

interface Props {
  name: IconName;
  [x:string]: any;
}
const { name, ...props } = Astro.props;
---

<svg {...props} aria-hidden data-icon={name}>
  <use xlink:href={`#${name}`} />
</svg>

<style>
  svg {
    display: inline-block;
    width: 1rem;
    height: 1rem;
    color: currentColor;
  }
</style>
