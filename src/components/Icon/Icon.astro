---
import type { IconName } from '@assets/icon-sprite';

interface Props {
  name: IconName;
  [x:string]: any;
}
const { name, ...props } = Astro.props;
const attributes = { 
  ...props,
  'aria-hidden': !props['aria-label'],
};
---

<svg { ...attributes } data-icon={name}>
  <use xlink:href={`#${name}`} />
</svg>

<style>
  svg {
    display: inline-block;
    width: 1rem;
    height: 1rem;
    color: currentColor;
  }
</style>
