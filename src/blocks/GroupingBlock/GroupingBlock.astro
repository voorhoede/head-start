---
import Blocks from '@blocks/Blocks.astro';
import { buildNestedFieldPath } from '@blocks/block-debug-utils';
import { Accordion, AccordionItem } from '@components/Accordion';
import { Tabs, TabsPanel, TabsTab } from '@components/Tabs';
import type { GroupingBlockFragment } from '@lib/datocms/types';

export interface Props {
  block: GroupingBlockFragment;
  debugFieldPath?: string;
  hideDebugLabels?: boolean;
}

const isLayout = (layout: GroupingBlockFragment['layout']) => block.layout === layout;

const { block, debugFieldPath, hideDebugLabels } = Astro.props;
const items = block.items;
---
{ isLayout('stack-titled') && (
  items.map((item, itemIndex) => (
    <section>
      <h2>{ item.title }</h2>
      <Blocks
        blocks={ item.blocks }
        debugFieldPath={ buildNestedFieldPath(debugFieldPath, itemIndex) }
        hideDebugLabels={ hideDebugLabels }
      />
    </section>
  ))
)}

{ isLayout('stack-untitled') && (
  items.map((item, itemIndex) => (
    <Blocks
      blocks={ item.blocks }
      debugFieldPath={ buildNestedFieldPath(debugFieldPath, itemIndex) }
      hideDebugLabels={ hideDebugLabels }
    />
  ))
)}

{ (isLayout('accordion-open') || isLayout('accordion-closed')) && (
  <Accordion>
    { items.map((item, itemIndex) => (
      <AccordionItem
        name={ `block-${block.id}` }
        open={ isLayout('accordion-open') }
      >
        <Fragment slot="heading">{ item.title }</Fragment>
        <Fragment slot="body">
          <Blocks
            blocks={ item.blocks }
            debugFieldPath={ buildNestedFieldPath(debugFieldPath, itemIndex) }
            hideDebugLabels={ hideDebugLabels }
          />
        </Fragment>
      </AccordionItem>
    ))}
  </Accordion>
)}

{ isLayout('tabs') && (
  <Tabs>
    { items.map((item, itemIndex) => (<>
      <TabsTab>{ item.title }</TabsTab>
      <TabsPanel>
        <Blocks
          blocks={ item.blocks }
          debugFieldPath={ buildNestedFieldPath(debugFieldPath, itemIndex) }
          hideDebugLabels={ hideDebugLabels }
        />
      </TabsPanel>
    </>))}
  </Tabs>
)}
