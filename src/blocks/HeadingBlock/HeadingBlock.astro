---
import type { HeadingBlockFragment } from '@lib/datocms/types';

export interface Props {
  block: HeadingBlockFragment
}

const { block } = Astro.props;
const { heading, subHeading, level } = block;

const Tag = `h${level || 2}`;
const hasSubHeading = Boolean(block.subHeading);
---

{hasSubHeading === false &&
  <Tag>{heading}</Tag>
}

{hasSubHeading === true &&
  <Tag>
    {heading}<br />
    <small>{subHeading}</small>
  </Tag>
}
