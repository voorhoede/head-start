---
import type { HeadingBlockFragment } from '@lib/datocms/types';

export interface Props {
  block: HeadingBlockFragment
}

const { block } = Astro.props;
const { blockTitle, subtitle, level } = block;

const Tag = `h${level || 2}`;
---

{!subtitle 
  ? <Tag>{blockTitle}</Tag> 
  : <Tag>
    {blockTitle}<br />
    <small>{subtitle}</small>
  </Tag>
}
