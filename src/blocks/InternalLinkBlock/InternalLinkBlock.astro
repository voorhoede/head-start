---
import type { InternalLinkBlockFragment } from '@lib/datocms/types';
import LinkToRecord from '@components/LinkToRecord/LinkToRecord.astro';
import { getActionClassList } from '@blocks/ActionBlock/ActionBlock.astro';
import '@blocks/ActionBlock/action.css';

export interface Props {
  block: InternalLinkBlockFragment;
}
const { block } = Astro.props;
const { title, link, style } = block;
---

<LinkToRecord record={link} class:list={getActionClassList(style)}>
  {title}
</LinkToRecord>
